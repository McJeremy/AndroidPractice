<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:gravity="center"
   >
    <Button android:id="@+id/btnCreateDB" android:text="创建数据库"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        ></Button>

    <Button android:id="@+id/btnUpdateDB" android:text="升级数据库"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        ></Button>

    <Button android:id="@+id/btnInsertData" android:text="插入数据"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        ></Button>

    <Button android:id="@+id/btnUpdateData" android:text="修改数据"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        ></Button>

    <Button android:id="@+id/btnDelData" android:text="删除数据"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        ></Button>

    <Button android:id="@+id/btnQueryData" android:text="查询数据"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        ></Button>

</LinearLayout>
